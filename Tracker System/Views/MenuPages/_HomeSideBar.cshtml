<script>
    function clearActiveLink() {
        sessionStorage.removeItem("activeLinkText");
    }
    document.addEventListener("DOMContentLoaded", function () {
        if (window.location.pathname === "/TrackerSystem") {
            sessionStorage.removeItem("activeLinkText");
        }
        const links = document.querySelectorAll(".freight-link");

        links.forEach(link => {
            link.addEventListener("click", function () {
                // Remove 'clicked' class from all links
                links.forEach(l => l.classList.remove("clicked"));

                // Add 'clicked' to the clicked link
                this.classList.add("clicked");

                // Optional: Save to sessionStorage to persist on reload
             @*   sessionStorage.setItem("activeLink", this.href);*@sessionStorage.setItem("activeLinkText", this.textContent);
            });
        });

        // On load, restore last clicked link
        const lastActiveText = sessionStorage.getItem("activeLinkText");
        if (lastActiveText) {
            const match = Array.from(links).find(l => l.textContent.trim() === lastActiveText.trim());
            if (match) {
                match.classList.add("clicked");
            }
        }
    });
</script>

