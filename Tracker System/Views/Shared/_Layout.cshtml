@using System.Data
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Tracker System</title>

    <!-- CSS Links -->
    <link href="~/Styles/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Styles/bootstrap.css" rel="stylesheet" />
    <link href="~/Styles/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Styles/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Styles/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />

    <!-- Meta Tags -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Scripts -->
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <link href="~/Styles/style.css" rel="stylesheet" />
    <link href="~/Scripts/style.css" rel="stylesheet" />
    <link href="~/Content/Css/ext.css" rel="stylesheet" />

</head>
<body>

    <div>
        @Html.Partial("~/Views/MenuPages/_HomeSideBar.cshtml")
    </div>

    @Html.Partial("~/Views/Shared/_Navbar.cshtml ")

    @RenderBody()



    <!-- Rendered Scripts -->
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- Section Scripts -->
    @RenderSection("scripts", required: false)
    <script>
        $(document).ajaxSuccess(function (e, xhr) {
            if (xhr.responseText === "SessionExpired") {
                alert("Your session has expired. Kindly log in again to proceed.");
                window.location.href = '/TSSystem/TrackerSystem/Logout';
            }
        });

    </script>
</body>
</html>

