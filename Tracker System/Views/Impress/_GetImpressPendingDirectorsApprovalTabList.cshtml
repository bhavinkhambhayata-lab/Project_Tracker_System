@{
    int groupId = ViewBag.GroupId; // e.g. 5 (Director Approval)
}

<style>
    .dir-checkbox {
        height: 20px;
        width: 17px;
    }

    .dir-length {
        text-align: right;
        margin-bottom: 5px;
    }

    .dir-loader {
        text-align: center;
        padding: 30px;
        font-size: 16px;
    }

        .dir-loader i {
            font-size: 40px;
            display: block;
            margin-bottom: 8px;
        }

    .dir-table th,
    .dir-table td {
        white-space: nowrap;
        vertical-align: middle !important;
    }

    .dir-search-row input {
        width: 100%;
        height: 28px;
        font-size: 12px;
        padding: 2px 6px;
    }

    .sendtodirectorapprovaldate,
    .submittedinaccountsdate {
        white-space: nowrap;
    }

    #TblDirectorApproval_info {
        margin-left: 2rem;
    }

    .btn-save {
        margin-left: 141rem;
    }
</style>

<div class="box dir-box">

    <div class="row">
        <div class="col-md-12">
            <div id="DirectorPage" class="dir-length mt-4"></div>
        </div>
    </div>

    <div class="box-body">
        <div class="table-responsive">

            <!-- Loader -->
            <div id="dirLoader" class="dir-loader" style="display:none;">
                <i class="fa fa-spinner fa-spin"></i>
                <span>Loading data, please wait...</span>
            </div>

            <table id="TblDirectorApproval" class="table table-bordered table-striped dir-table" style="width: 1490px;margin-left:14px">
                <thead>
                    <tr>
                        <th class="text-center">Sr No</th>
                        <th>Employee Name</th>
                        <th>Month</th>
                        <th>Year</th>
                        <th class="text-right">Claimed Amount</th>
                        <th>CMO Approval Date</th>
                        <th class="text-center dir-checkbox">
                            <input type="checkbox" id="chkSelectAllDirector" />
                        </th>
                        <th>Submitted In Accounts Date</th>
                        <th>Remarks</th>
                    </tr>

                    <tr class="dir-search-row">
                        <th><input type="text" class="dir-column-search" data-column="0"></th>
                        <th><input type="text" class="dir-column-search" data-column="1"></th>
                        <th><input type="text" class="dir-column-search" data-column="2"></th>
                        <th><input type="text" class="dir-column-search" data-column="3"></th>
                        <th><input type="text" class="dir-column-search" data-column="4"></th>
                        <th><input type="text" class="dir-column-search" data-column="5"></th>
                        <th></th>
                        <th><input type="text" class="dir-column-search" data-column="7"></th>
                        <th><input type="text" class="dir-column-search" data-column="8"></th>
                    </tr>
                </thead>

                <tbody class="director-approval-tbody"></tbody>
            </table>

            <div class="row">
                <div class="col">
                    <button type="button" id="btnSaveDirector" class="btn-cancel btn-save">
                        Save
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>


<script>
    var groupId = '@ViewBag.GroupId';//5

    $(document).ready(function () {
        loadDirectorApprovalList();
    });

    function loadDirectorApprovalList() {

        $('#dirLoader').show();
        $('#TblDirectorApproval').hide();

        $.ajax({
            //url: '/Impress/GetImpressPendingList',
            url: '@Url.Action("GetImpressPendingList","Impress")',
            type: 'GET',
            data: { groupId: groupId },//5
            success: function (data) {

                if ($.fn.dataTable.isDataTable('#TblDirectorApproval')) {
                    $('#TblDirectorApproval').DataTable().destroy();
                }

                var rows = '';

                $.each(data, function (i, item) {

                    rows += '<tr>';
                    rows += '<td>' + item.SrNo + '</td>';
                    rows += '<td>' + item.EmpName + '</td>';
                    rows += '<td>' + item.Month + '</td>';
                    rows += '<td>' + item.Year + '</td>';
                    rows += '<td class="text-right">' + item.ClaimedAmount + '</td>';

                    /* Display only */
                    rows += '<td class="sendtodirectorapprovaldate">' +
                        formatDate(item.SendToDirectorForApprovalDate) +
                        '</td>';

                    rows += '<td class="text-center">' +
                        '<input type="checkbox" class="director-row-checkbox" data-rowid="' + item.RowID + '">' +
                        '</td>';

                    /* Updated here */
                    rows += '<td class="submittedinaccountsdate">' +
                        formatDate(item.SubmittedInAccountsDate) +
                        '</td>';

                    rows += '<td>' + (item.Remarks || '') + '</td>';
                    rows += '</tr>';
                });

                $('.director-approval-tbody').html(rows);

                $('#dirLoader').hide();
                $('#TblDirectorApproval').show();

                var table = $('#TblDirectorApproval').DataTable({
                    paging: true,
                    searching: true,
                    ordering: true,
                    lengthMenu: [10, 20, 25, 50, 100],
                    pageLength: 10,
                    language: { emptyTable: "No Data Found" },
                    initComplete: moveLengthDropdownDirector,
                    drawCallback: moveLengthDropdownDirector
                });

                $('#TblDirectorApproval thead').on('keyup change', '.dir-column-search', function () {
                    table.column($(this).data('column')).search(this.value).draw();
                });
            }
        });
    }

    function moveLengthDropdownDirector() {


        $('#TblDirectorApproval_filter').hide();


        var $length = $('#TblDirectorApproval_wrapper')
            .find('#TblDirectorApproval_length');


        var $target = $('#DirectorPage');

        if ($length.length && $target.length) {


            $target.find('#TblDirectorApproval_length').remove();


            $length.appendTo($target).css({
                'margin-top': '5px',
                'display': 'inline-block',
                'margin-right': '42rem'
            });
        }
    }


    /* ========= CHECKBOX LOGIC ========= */

    $(document).on('change', '.director-row-checkbox', function () {

        var $row = $(this).closest('tr');
        var $accountsDate = $row.find('.submittedinaccountsdate');

        if (this.checked) {
            $accountsDate.text(getTodayDate_ddMMyy());
        } else {
            $accountsDate.text('');
            $('#chkSelectAllDirector').prop('checked', false);
        }
    });

    $(document).on('change', '#chkSelectAllDirector', function () {

        var today = getTodayDate_ddMMyy();
        var isChecked = this.checked;

        $('.director-row-checkbox').each(function () {

            var $row = $(this).closest('tr');
            var $accountsDate = $row.find('.submittedinaccountsdate');

            $(this).prop('checked', isChecked);
            $accountsDate.text(isChecked ? today : '');
        });
    });

    function getSelectedDirectorRows() {

        var list = [];

        $('.director-row-checkbox:checked').each(function () {

            var $row = $(this).closest('tr');

            list.push({
                RowID: $(this).data('rowid'),
                Date1: $row.find('.submittedinaccountsdate').text()
            });
        });

        return list;
    }

    /* ========= SAVE ========= */

    $('#btnSaveDirector').on('click', function () {

        var rows = getSelectedDirectorRows();

        if (rows.length === 0) {
            alert('Please select at least one row');
            return;
        }

        $.ajax({
            //url: '/Impress/SaveImpressRowWise',
            url: '@Url.Action("SaveImpressRowWise","Impress")',
            type: 'POST',
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify({
                groupId: 5,
                rows: rows
            }),
            success: function (res) {
                if (res.success) {
                    alert('Saved Successfully');
                    $('#chkSelectAllDirector').prop('checked', false);
                    loadDirectorApprovalList();
                } else {
                    alert('Save failed');
                }
            }
        });
    });

    /* ========= HELPERS ========= */

    function formatDate(date) {
        if (!date) return '';

        var d;

        // Handle /Date(1766946600000)/
        if (typeof date === "string" && date.includes("Date")) {
            var timestamp = parseInt(date.replace(/[^0-9]/g, ""));
            d = new Date(timestamp);
        } else {
            d = new Date(date);
        }

        var dd = String(d.getDate()).padStart(2, '0');
        var mm = String(d.getMonth() + 1).padStart(2, '0');
        var yy = String(d.getFullYear()).slice(-2); // ✅ 2026 → 26

        return dd + '/' + mm + '/' + yy;
    }

    function getTodayDate_ddMMyy() {
        var d = new Date();
        return String(d.getDate()).padStart(2, '0') + '/' +
            String(d.getMonth() + 1).padStart(2, '0') + '/' +
            String(d.getFullYear()).slice(-2);
    }
</script>


