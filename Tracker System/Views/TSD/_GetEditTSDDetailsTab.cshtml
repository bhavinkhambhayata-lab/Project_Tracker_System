                $("#IsMKT").prop("checked", true).trigger("change");
                $("#DirectorReceiptDate").datepicker('update');
            });


            // DIRECTOR (>= MKT)
            $("#DirectorReceiptDate").datepicker({
                format: "dd/mm/yy",
