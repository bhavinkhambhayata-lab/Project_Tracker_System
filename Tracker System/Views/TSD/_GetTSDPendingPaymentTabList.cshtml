@{
    int groupId = ViewBag.GroupId; // e.g. 7 (Payment Tab)
}

<style>
    .pay-checkbox {
        height: 20px;
        width: 17px;
    }

    .pay-length {
        text-align: right;
        margin-bottom: 5px;
    }

    .pay-loader {
        text-align: center;
        padding: 30px;
        font-size: 16px;
    }

        .pay-loader i {
            font-size: 40px;
            display: block;
            margin-bottom: 8px;
        }

    .pay-table th,
    .pay-table td {
        white-space: nowrap;
        vertical-align: middle !important;
    }

    .pay-search-row input {
        width: 100%;
        height: 28px;
        font-size: 12px;
        padding: 2px 6px;
    }

    .paymentdate,
    .curieredonsentdate {
        white-space: nowrap;
    }

    #TblPayment_info {
        margin-left: 2rem;
    }

    .btn-save {
        margin-left: 141rem;
    }
</style>

<div class="box pay-box">

    <div class="row">
        <div class="col-md-12">
            <div id="PaymentPage" class="pay-length mt-4"></div>
        </div>
    </div>

    <div class="box-body">
        <div class="table-responsive">

            <!-- Loader -->
            <div id="payLoader" class="pay-loader" style="display:none;">
                <i class="fa fa-spinner fa-spin"></i>
                <span>Loading data, please wait...</span>
            </div>

            <table id="TblPayment" class="table table-bordered table-striped pay-table" style="width: 1490px;margin-left:14px">
                <thead>
                    <tr>
                        <th class="text-center">Sr No</th>
                        <th>Employee Name</th>
                        <th class="text-right">TSD Amount</th>
                        <th>Payment Date</th>
                        <th class="text-center pay-checkbox">
                            <input type="checkbox" id="chkSelectAllPayment" />
                        </th>
                        <th>Courier Sent Date</th>
                        <th>Remarks</th>
                    </tr>

                    <tr class="pay-search-row">
                        <th><input type="text" class="pay-column-search" data-column="0"></th>
                        <th><input type="text" class="pay-column-search" data-column="1"></th>
                        <th><input type="text" class="pay-column-search" data-column="2"></th>
                        <th><input type="text" class="pay-column-search" data-column="3"></th>
                        <th></th>
                        <th><input type="text" class="pay-column-search" data-column="5"></th>
                        <th><input type="text" class="pay-column-search" data-column="6"></th>
                    </tr>
                </thead>

                <tbody class="payment-tbody"></tbody>
            </table>

            <div class="row">
                <div class="col">
                    <button type="button" id="btnSavePayment" class="btn-cancel btn-save">
                        Save
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    var groupId = '@ViewBag.GroupId';//7

    $(document).ready(function () {
        loadPaymentList();
    });

    function loadPaymentList() {

        $('#payLoader').show();
        $('#TblPayment').hide();

        $.ajax({
            //url: '/TSD/GetTSDPendingList',
            url: '@Url.Action("GetTSDPendingList","TSD")',
            type: 'GET',
            data: { groupId: groupId },//7
            success: function (data) {

                if ($.fn.dataTable.isDataTable('#TblPayment')) {
                    $('#TblPayment').DataTable().destroy();
                }

                var rows = '';

                $.each(data, function (i, item) {

                    rows += '<tr>';
                    rows += '<td>' + item.SrNo + '</td>';
                    rows += '<td>' + item.Name + '</td>';
                    rows += '<td class="text-right">' + item.TSDAmount + '</td>';

                    /* Display only */
                    rows += '<td class="paymentdate">' +
                        formatDate(item.PaymentDate) +
                        '</td>';

                    rows += '<td class="text-center">' +
                        '<input type="checkbox" class="payment-row-checkbox" data-rowid="' + item.RowID + '">' +
                        '</td>';

                    /* Updated here */
                    rows += '<td class="curieredonsentdate">' +
                        formatDate(item.CurieredOnSentDate) +
                        '</td>';

                    rows += '<td>' + (item.Remarks || '') + '</td>';
                    rows += '</tr>';
                });

                $('.payment-tbody').html(rows);

                $('#payLoader').hide();
                $('#TblPayment').show();

                var table = $('#TblPayment').DataTable({
                    paging: true,
                    searching: true,
                    ordering: true,
                    lengthMenu: [10, 20, 25, 50, 100],
                    pageLength: 10,
                    language: { emptyTable: "No Data Found" },
                    initComplete: moveLengthDropdownPayment,
                    drawCallback: moveLengthDropdownPayment
                });

                $('#TblPayment thead').on('keyup change', '.pay-column-search', function () {
                    table.column($(this).data('column')).search(this.value).draw();
                });
            }
        });
    }

    function moveLengthDropdownPayment() {


        $('#TblPayment_filter').hide();


        var $length = $('#TblPayment_wrapper')
            .find('#TblPayment_length');


        var $target = $('#PaymentPage');

        if ($length.length && $target.length) {


            $target.find('#TblPayment_length').remove();


            $length.appendTo($target).css({
                'margin-top': '5px',
                'display': 'inline-block',
                'margin-right': '42rem'
            });
        }
    }


    /* ========= CHECKBOX LOGIC ========= */

    $(document).on('change', '.payment-row-checkbox', function () {

        var $row = $(this).closest('tr');
        var $courierDate = $row.find('.curieredonsentdate');

        if (this.checked) {
            $courierDate.text(getTodayDate_ddMMyy());
        } else {
            $courierDate.text('');
            $('#chkSelectAllPayment').prop('checked', false);
        }
    });

    $(document).on('change', '#chkSelectAllPayment', function () {

        var today = getTodayDate_ddMMyy();
        var isChecked = this.checked;

        $('.payment-row-checkbox').each(function () {

            var $row = $(this).closest('tr');
            var $courierDate = $row.find('.curieredonsentdate');

            $(this).prop('checked', isChecked);
            $courierDate.text(isChecked ? today : '');
        });
    });

    function getSelectedPaymentRows() {

        var list = [];

        $('.payment-row-checkbox:checked').each(function () {

            var $row = $(this).closest('tr');

            list.push({
                RowID: $(this).data('rowid'),
                Date1: $row.find('.curieredonsentdate').text()
            });
        });

        return list;
    }

    /* ========= SAVE ========= */

    $('#btnSavePayment').on('click', function () {

        var rows = getSelectedPaymentRows();

        if (rows.length === 0) {
            alert('Please select at least one row');
            return;
        }

        $.ajax({
            //url: '/TSD/SaveTSDRowWise',
            url: '@Url.Action("SaveTSDRowWise","TSD")',
            type: 'POST',
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify({
                groupId: 7,
                rows: rows
            }),
            success: function (res) {
                if (res.success) {
                    alert('Saved Successfully');
                    $('#chkSelectAllPayment').prop('checked', false);
                    loadPaymentList();
                } else {
                    alert('Save failed');
                }
            }
        });
    });

    /* ========= HELPERS ========= */

    function formatDate(date) {
        if (!date) return '';

        var d;

        // Handle /Date(1766946600000)/
        if (typeof date === "string" && date.includes("Date")) {
            var timestamp = parseInt(date.replace(/[^0-9]/g, ""));
            d = new Date(timestamp);
        } else {
            d = new Date(date);
        }

        var dd = String(d.getDate()).padStart(2, '0');
        var mm = String(d.getMonth() + 1).padStart(2, '0');
        var yy = String(d.getFullYear()).slice(-2); // ✅ 2026 → 26

        return dd + '/' + mm + '/' + yy;
    }

    function getTodayDate_ddMMyy() {
        var d = new Date();
        return String(d.getDate()).padStart(2, '0') + '/' +
            String(d.getMonth() + 1).padStart(2, '0') + '/' +
            String(d.getFullYear()).slice(-2);
    }
</script>
