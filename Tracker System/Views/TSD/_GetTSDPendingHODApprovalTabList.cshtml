@{
    int groupId = ViewBag.GroupId;
}

<style>
    .hod-checkbox {
        height: 20px;
        width: 17px;
    }

    .hod-length {
        text-align: right;
        margin-bottom: 5px;
    }

    .hod-loader {
        text-align: center;
        padding: 30px;
        font-size: 16px;
    }

        .hod-loader i {
            font-size: 40px;
            display: block;
            margin-bottom: 8px;
        }

    .hod-table th,
    .hod-table td {
        white-space: nowrap;
        vertical-align: middle !important;
    }

    .hod-search-row input {
        width: 100%;
        height: 28px;
        font-size: 12px;
        padding: 2px 6px;
    }

    .sendtohodapprovaldate {
        white-space: nowrap;
    }

    #TblHODApproval_info {
        margin-left: 2rem;
    }

    .btn-save {
        margin-left: 141rem;
    }
</style>

<div class="box hod-box">

    <div class="row">
        <div class="col-md-12">
            <div id="HODApprovalPage" class="hod-length mt-4"></div>
        </div>
    </div>

    <div class="box-body">
        <div class="table-responsive">

            <!-- Loader -->
            <div id="hodLoader" class="hod-loader" style="display:none;">
                <i class="fa fa-spinner fa-spin"></i>
                <span>Loading data, please wait...</span>
            </div>

            <!-- Table -->
            <table id="TblHODApproval" class="table table-bordered table-striped hod-table" style="width: 1490px;margin-left:14px">
                <thead>
                    <tr>
                        <th class="text-center">Sr No</th>

                        <th>Employee Name</th>
                        <th class="text-right">TSD Amount</th>
                        <th>Send To Cross Checking Date</th>
                        <th class="text-center hod-checkbox">
                            <input type="checkbox" id="chkSelectAllHODApproval" />
                        </th>
                        <th>Sent to HOD Approval Date</th>
                        <th>Remarks</th>
                    </tr>

                    <!-- Search Row -->
                    <tr class="hod-search-row">
                        <th><input type="text" class="hod-column-search" data-column="0"></th>

                        <th><input type="text" class="hod-column-search" data-column="1"></th>
                        <th><input type="text" class="hod-column-search" data-column="2"></th>
                        <th><input type="text" class="hod-column-search" data-column="3"></th>
                        <th></th>
                        <th><input type="text" class="hod-column-search" data-column="5"></th>
                        <th><input type="text" class="hod-column-search" data-column="6"></th>
                    </tr>
                </thead>

                <tbody class="hod-approval-tbody"></tbody>
            </table>

            <div class="row">
                <div class="col">
                    <button type="button" id="btnSaveHODApproval" class="btn-cancel btn-save">
                        Save
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    var groupId = '@ViewBag.GroupId';//3

    $(document).ready(function () {
        loadHODApprovalList();
    });

    function loadHODApprovalList() {

        $('#hodLoader').show();
        $('#TblHODApproval').hide();

        $.ajax({
            //url: '/TSD/GetTSDPendingList',
            url: '@Url.Action("GetTSDPendingList","TSD")',
            type: 'GET',
            data: { groupId: groupId },//3
            success: function (data) {

                if ($.fn.dataTable.isDataTable('#TblHODApproval')) {
                    $('#TblHODApproval').DataTable().destroy();
                }

                var rows = '';

                $.each(data, function (i, item) {

                    rows += '<tr>';
                    rows += '<td>' + item.SrNo + '</td>';
                    rows += '<td>' + item.Name + '</td>';
                    rows += '<td class="text-right">' + item.TSDAmount + '</td>';
                    rows += '<td class="sendtocrosscheckingdate">' + formatDate(item.SendToCrossCheckingDate) + '</td>';

                    rows += '<td class="text-center">' +
                        '<input type="checkbox" class="hod-row-checkbox" data-rowid="' + item.RowID + '">' +
                        '</td>';

                    rows += '<td class="sendtohodapprovaldate">' +
                        formatDate(item.SendToHeadForApprovalDate) +
                        '</td>';

                    rows += '<td>' + (item.Remarks || '') + '</td>';
                    rows += '</tr>';
                });

                $('.hod-approval-tbody').html(rows);

                $('#hodLoader').hide();
                $('#TblHODApproval').show();

                var table = $('#TblHODApproval').DataTable({
                    paging: true,
                    searching: true,
                    ordering: true,
                    lengthMenu: [10, 20, 25, 50, 100],
                    pageLength: 10,
                    language: { emptyTable: "No Data Found" },
                    initComplete: moveLengthDropdownHOD,
                    drawCallback: moveLengthDropdownHOD
                });

                $('#TblHODApproval thead').on('keyup change', '.hod-column-search', function () {
                    table.column($(this).data('column')).search(this.value).draw();
                });
            }
        });
    }

    function moveLengthDropdownHOD() {


        $('#TblHODApproval_filter').hide();


        var $length = $('#TblHODApproval_wrapper').find('#TblHODApproval_length');


        var $target = $('#HODApprovalPage');

        if ($length.length && $target.length) {


            $target.find('#TblHODApproval_length').remove();


            $length.appendTo($target).css({
                'margin-top': '5px',
                'display': 'inline-block',
                'margin-right': '42rem'
            });
        }
    }


    /* ========= ROW CHECKBOX ========= */

    $(document).on('change', '.hod-row-checkbox', function () {

        var $row = $(this).closest('tr');
        var $dateCell = $row.find('.sendtohodapprovaldate');

        if (this.checked) {
            $dateCell.text(getTodayDate_ddMMyy());
        } else {
            $dateCell.text('');
            $('#chkSelectAllHODApproval').prop('checked', false);
        }
    });

    /* ========= SELECT ALL ========= */

    $(document).on('change', '#chkSelectAllHODApproval', function () {

        var isChecked = this.checked;
        var today = getTodayDate_ddMMyy();

        $('.hod-row-checkbox').each(function () {

            var $row = $(this).closest('tr');
            var $dateCell = $row.find('.sendtohodapprovaldate');

            $(this).prop('checked', isChecked);
            $dateCell.text(isChecked ? today : '');
        });
    });

    /* ========= GET SELECTED ROWS ========= */

    function getSelectedHODApprovalRows() {

        var list = [];

        $('.hod-row-checkbox:checked').each(function () {

            var $row = $(this).closest('tr');

            list.push({
                RowID: $(this).data('rowid'),
                Date1: $row.find('.sendtohodapprovaldate').text()
            });
        });

        return list;
    }

    /* ========= SAVE ========= */

    $('#btnSaveHODApproval').on('click', function () {

        var rows = getSelectedHODApprovalRows();

        if (rows.length === 0) {
            alert('Please select at least one row');
            return;
        }

        $.ajax({
            //url: '/TSD/SaveTSDRowWise',
            url: '@Url.Action("SaveTSDRowWise","TSD")',
            type: 'POST',
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify({
                groupId: 3,
                rows: rows
            }),
            success: function (res) {

                if (res.success) {
                    alert('Saved Successfully');
                    $('#chkSelectAllHODApproval').prop('checked', false);
                    loadHODApprovalList();
                } else {
                    alert('Save failed');
                }
            },
            error: function () {
                alert('Error while saving data');
            }
        });
    });

    /* ========= HELPERS ========= */

    function formatDate(date) {
        if (!date) return '';
        if (typeof date === "string" && date.includes("Date")) {
            var ts = parseInt(date.replace(/[^0-9]/g, ""));
            return new Date(ts).toLocaleDateString('en-GB');
        }
        return new Date(date).toLocaleDateString('en-GB');
    }

    function getTodayDate_ddMMyy() {
        var d = new Date();
        return String(d.getDate()).padStart(2, '0') + '/' +
            String(d.getMonth() + 1).padStart(2, '0') + '/' +
            String(d.getFullYear()).slice(-2);
    }
</script>
