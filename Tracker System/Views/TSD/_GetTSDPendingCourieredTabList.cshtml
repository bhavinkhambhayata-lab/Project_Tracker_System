@{
    int groupId = ViewBag.GroupId; // e.g. 8 (Couriered Tab)
}

<style>
    .cour-checkbox {
        height: 20px;
        width: 17px;
    }

    .cour-length {
        text-align: right;
        margin-bottom: 5px;
    }

    .cour-loader {
        text-align: center;
        padding: 30px;
        font-size: 16px;
    }

        .cour-loader i {
            font-size: 40px;
            display: block;
            margin-bottom: 8px;
        }

    .cour-table th,
    .cour-table td {
        white-space: nowrap;
        vertical-align: middle !important;
    }

    .cour-search-row input {
        width: 100%;
        height: 28px;
        font-size: 12px;
        padding: 2px 6px;
    }

    .curieredonsentdate,
    .curieredonconfirmationdate {
        white-space: nowrap;
    }

    #TblCouriered_info {
        margin-left: 2rem;
    }

    .btn-save {
        margin-left: 141rem;
    }
</style>


<div class="box cour-box">

    <div class="row">
        <div class="col-md-12">
            <div id="CourieredPage" class="cour-length mt-4"></div>
        </div>
    </div>

    <div class="box-body">
        <div class="table-responsive">

            <!-- Loader -->
            <div id="courLoader" class="cour-loader" style="display:none;">
                <i class="fa fa-spinner fa-spin"></i>
                <span>Loading data, please wait...</span>
            </div>

            <table id="TblCouriered" class="table table-bordered table-striped cour-table" style="width: 1490px;margin-left:14px">
                <thead>
                    <tr>
                        <th class="text-center">Sr No</th>
                        <th>Employee Name</th>
                        <th class="text-right">TSD Amount</th>
                        <th>Courier Sent Date</th>
                        <th class="text-center cour-checkbox">
                            <input type="checkbox" id="chkSelectAllCouriered" />
                        </th>
                        <th>Courier Confirmation Date</th>
                        <th>Remarks</th>
                    </tr>

                    <tr class="cour-search-row">
                        <th><input type="text" class="cour-column-search" data-column="0"></th>

                        <th><input type="text" class="cour-column-search" data-column="1"></th>
                        <th><input type="text" class="cour-column-search" data-column="2"></th>
                        <th><input type="text" class="cour-column-search" data-column="3"></th>
                        <th></th>
                        <th><input type="text" class="cour-column-search" data-column="5"></th>
                        <th><input type="text" class="cour-column-search" data-column="6"></th>
                    </tr>
                </thead>

                <tbody class="couriered-tbody"></tbody>
            </table>

            <div class="row">
                <div class="col">
                    <button type="button" id="btnSaveCouriered" class="btn-cancel btn-save">
                        Save
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    var groupId = '@ViewBag.GroupId'; //8

    $(document).ready(function () {
        loadCourieredList();
    });

    function loadCourieredList() {

        $('#courLoader').show();
        $('#TblCouriered').hide();

        $.ajax({
            //url: '/TSD/GetTSDPendingList',
            url: '@Url.Action("GetTSDPendingList","TSD")',
            type: 'GET',
            data: { groupId: groupId },//8
            success: function (data) {

                if ($.fn.dataTable.isDataTable('#TblCouriered')) {
                    $('#TblCouriered').DataTable().destroy();
                }

                var rows = '';

                $.each(data, function (i, item) {

                    rows += '<tr>';
                    rows += '<td>' + item.SrNo + '</td>';
                    rows += '<td>' + item.Name + '</td>';
                    rows += '<td class="text-right">' + item.TSDAmount + '</td>';

                    /* Display only */
                    rows += '<td class="curieredonsentdate">' +
                        formatDate(item.CurieredOnSentDate) +
                        '</td>';

                    rows += '<td class="text-center">' +
                        '<input type="checkbox" class="couriered-row-checkbox" data-rowid="' + item.RowID + '">' +
                        '</td>';

                    /* Updated here */
                    rows += '<td class="curieredonconfirmationdate">' +
                        formatDate(item.CurieredOnConfirmationDate) +
                        '</td>';

                    rows += '<td>' + (item.Remarks || '') + '</td>';
                    rows += '</tr>';
                });

                $('.couriered-tbody').html(rows);

                $('#courLoader').hide();
                $('#TblCouriered').show();

                var table = $('#TblCouriered').DataTable({
                    paging: true,
                    searching: true,
                    ordering: true,
                    lengthMenu: [10, 20, 25, 50, 100],
                    pageLength: 10,
                    language: { emptyTable: "No Data Found" },
                    initComplete: moveLengthDropdownCouriered,
                    drawCallback: moveLengthDropdownCouriered
                });

                $('#TblCouriered thead').on('keyup change', '.cour-column-search', function () {
                    table.column($(this).data('column')).search(this.value).draw();
                });
            }
        });
    }

    function moveLengthDropdownCouriered() {


        $('#TblCouriered_filter').hide();


        var $length = $('#TblCouriered_wrapper')
            .find('#TblCouriered_length');


        var $target = $('#CourieredPage');

        if ($length.length && $target.length) {


            $target.find('#TblCouriered_length').remove();


            $length.appendTo($target).css({
                'margin-top': '5px',
                'display': 'inline-block',
                'margin-right': '42rem'
            });
        }
    }


    /* ========= CHECKBOX LOGIC ========= */

    $(document).on('change', '.couriered-row-checkbox', function () {

        var $row = $(this).closest('tr');
        var $confirmDate = $row.find('.curieredonconfirmationdate');

        if (this.checked) {
            $confirmDate.text(getTodayDate_ddMMyy());
        } else {
            $confirmDate.text('');
            $('#chkSelectAllCouriered').prop('checked', false);
        }
    });

    $(document).on('change', '#chkSelectAllCouriered', function () {

        var today = getTodayDate_ddMMyy();
        var isChecked = this.checked;

        $('.couriered-row-checkbox').each(function () {

            var $row = $(this).closest('tr');
            var $confirmDate = $row.find('.curieredonconfirmationdate');

            $(this).prop('checked', isChecked);
            $confirmDate.text(isChecked ? today : '');
        });
    });

    function getSelectedCourieredRows() {

        var list = [];

        $('.couriered-row-checkbox:checked').each(function () {

            var $row = $(this).closest('tr');

            list.push({
                RowID: $(this).data('rowid'),
                Date1: $row.find('.curieredonconfirmationdate').text()
            });
        });

        return list;
    }

    /* ========= SAVE ========= */

    $('#btnSaveCouriered').on('click', function () {

        var rows = getSelectedCourieredRows();

        if (rows.length === 0) {
            alert('Please select at least one row');
            return;
        }

        $.ajax({
            //url: '/TSD/SaveTSDRowWise',
            url: '@Url.Action("SaveTSDRowWise","TSD")',
            type: 'POST',
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify({
                groupId: 8,
                rows: rows
            }),
            success: function (res) {
                if (res.success) {
                    alert('Saved Successfully');
                    $('#chkSelectAllCouriered').prop('checked', false);
                    loadCourieredList();
                } else {
                    alert('Save failed');
                }
            }
        });
    });

    /* ========= HELPERS ========= */

    function formatDate(date) {
        if (!date) return '';

        var d;

        // Handle /Date(1766946600000)/
        if (typeof date === "string" && date.includes("Date")) {
            var timestamp = parseInt(date.replace(/[^0-9]/g, ""));
            d = new Date(timestamp);
        } else {
            d = new Date(date);
        }

        var dd = String(d.getDate()).padStart(2, '0');
        var mm = String(d.getMonth() + 1).padStart(2, '0');
        var yy = String(d.getFullYear()).slice(-2); // ✅ 2026 → 26

        return dd + '/' + mm + '/' + yy;
    }

    function getTodayDate_ddMMyy() {
        var d = new Date();
        return String(d.getDate()).padStart(2, '0') + '/' +
            String(d.getMonth() + 1).padStart(2, '0') + '/' +
            String(d.getFullYear()).slice(-2);
    }
</script>

